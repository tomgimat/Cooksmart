<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ProfileCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">0dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardElevation">4dp</item>


    </style>
    <style name="ProfileSectionTitle">
        <item name="android:textSize">22sp</item>
        <item name="android:fontWeight">600</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="ProfileSectionPrefTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:fontWeight">600</item>
        <item name="android:paddingBottom">8dp</item>
    </style>
    <style name="Widget.Cooksmart.PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_marginTop">12dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="Widget.Cooksmart.StepButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:elevation">6dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">17sp</item>
        <item name="android:minHeight">48dp</item>
    </style>

</resources>